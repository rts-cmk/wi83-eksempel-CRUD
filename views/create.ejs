<% include partials/head.ejs %>
<% include partials/header.ejs %>
<main role="main">
	<section>
		<h1><%= title %></h1>
		<form action="/user" method="post">
			<div class="inputGroup">
				<label for="createUser__username">Username</label>
				<input type="email" name="username" id="createUser__username" placeholder="your@email.com">
			</div>
			<div class="inputGroup">
				<label for="createUser__passphrase">Passphrase</label>
				<input type="password" name="passphrase" id="createUser__passphrase" placeholder="your secret passphrase">
			</div>
			<div class="inputGroup">
				<button type="submit">Create</button>
			</div>
		</form>
	</section>
</main>
